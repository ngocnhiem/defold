#include <metal_stdlib>
#include <simd/simd.h>

using namespace metal;

// ==========================================
// Argument buffer content
// ==========================================
struct sprite_140_vs
{
    float4x4 view_proj;
};

// Argument buffer definition
struct SceneArguments
{
    constant sprite_140_vs* uniforms [[id(0)]];
};

// ==========================================
// Vertex Shader
// ==========================================
struct main0_out
{
    float4 gl_Position [[position]];
    float2 var_texcoord0 [[user(locn0)]];
};

struct main0_in
{
    float4 position [[attribute(0)]];
};

vertex main0_out main0(main0_in in [[stage_in]],
                       constant SceneArguments& args [[buffer(0)]])
{
    main0_out out;
    out.gl_Position = args.uniforms->view_proj * float4(in.position.xyz, 1.0);
    out.var_texcoord0 = float2(1.0, 1.0); // in.texcoord0;
    return out;
}
